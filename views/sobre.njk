{% extends "layout.njk" %}

{% block head %}

    <title>Sobre - {{sobre.name}}</title>

{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{sobre.avatar_url}}" alt="Imagem de {{sobre.name}}">
        <h1>{{sobre.name}}</h1>
        <h2>{{sobre.role}}</h2>
        <p>
            {{sobre.description}}</p>
    </div>

    <div id="links-footer" class="links">
        {% for link in sobre.links %}
            <a href="{{link.url}}" target="_blank">{{link.name}}</a>
        {% endfor %}
    </div>

{% endblock %}